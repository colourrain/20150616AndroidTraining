        android:id="@+id/btn_fragment3_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="file" />
     <Button
        android:id="@+id/btn_fragment3_chooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chooser" />
