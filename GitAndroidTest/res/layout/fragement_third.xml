    <Button
        android:id="@+id/btn_fragment3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />
 <Button
        android:id="@+id/btn_fragment3_phonecall"
        android:layout_width="wrap_content"
