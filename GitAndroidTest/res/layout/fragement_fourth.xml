<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frament4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="This is Fragement4"
        android:textSize="@dimen/abc_text_size_caption_material" />

    <ImageView
        android:id="@+id/fragment4_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_lock_power_off" />

    <Button
        android:id="@+id/btn_fragment4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose pic" />
<Button
        android:id="@+id/btn_fragment4_addpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add pic" />
    <EditText
        android:id="@+id/fragment4_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

</LinearLayout>